                @Html.DropDownListFor(model => model.WchitNote, new SelectList(new List<string>() { "A", "B", "C", "D", "E" }), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
